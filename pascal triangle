#include<stdio.h>
void main()
{
int n,out,in,sp,pr;
 printf("Enter the number :");
 scanf("%d",&n);
 for(out=0;out<n;++out)
 {
     for(sp=1;sp<=n-out;++sp)
        printf(" ");
     for(in=0;in<=out;++in){
         if(in==0 || out==0)
         pr=1;
         else
         pr=pr*(out-in+1)/in;
         printf("%2d",pr);
         
     }
     printf("\n");
 }
}
